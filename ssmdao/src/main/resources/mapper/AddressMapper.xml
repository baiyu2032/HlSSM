<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.dao.AddressDao">

    <insert id="addlocal" parameterType="Address">
        insert into address value(0,#{aname},#{phone},#{postcode},#{local},#{uid},1,#{adefault})
    </insert>
    <update id="updatelocal" parameterType="Address">
        UPDATE address
        <trim prefix="set" suffixOverrides="," suffix="WHERE uid=#{uid} and aid = #{aid}">
            <if test="aname != null">
                aname =#{aname},
            </if>
            <if test="phone != null">
                phone =#{phone},
            </if>
            <if test="postcode != null">
                postcode=#{postcode},
            </if>
            <if test="local != null">
                 local=#{local},
            </if>
        </trim>
    </update>
    <update id="dellocal" parameterType="int">
        update address set logo = 0 where uid = #{uid} and aid=#{aid}
    </update>
    <select id="localcount" resultType="int" parameterType="int">
        select count(1) from address where uid = #{uid}
    </select>

</mapper>