<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.dao.AddressDao">

    <insert id="addLocal" parameterType="Address">
        insert into address value(0,#{aname},#{phone},#{postcode},#{local},#{uid},#{adefault})
    </insert>
    <update id="updateLocal" parameterType="Address">
        UPDATE address
        <trim prefix="set" suffixOverrides="," suffix="WHERE uid=#{uid} and aid = #{aid}">
            <if test="aname != null">
                aname =#{aname},
            </if>
            <if test="phone != null">
                phone =#{phone},
            </if>
            <if test="postcode != null">
                postcode=#{postcode},
            </if>
            <if test="local != null">
                local=#{local},
            </if>
            <if test="adefault!=null">
                adefault=#{adefault}
            </if>
        </trim>
    </update>
    <delete id="delLocal" >
        delete  from address  where uid = #{uid} and aid=#{aid}
    </delete>
    <select id="localCount" resultType="int" parameterType="int">
        select count(1) from address where uid = #{uid}
    </select>
    <select id="selectlocal" resultType="cn.pojo.Address" parameterType="int">
        select aname,phone,postcode,local,adefault from address where uid = #{uid}
    </select>

</mapper>